FROM node:14.15.4-alpine

WORKDIR /usr/src/app

ENV PORT $PORT
ENV HOST $HOST
ENV NODE_ENV $NODE_ENV
ENV APP_KEY $APP_KEY
ENV DB_CONNECTION $DB_CONNECTION
ENV PG_HOST $PG_HOST
ENV PG_PORT $PG_PORT
ENV PG_USER $PG_USER
ENV PG_PASSWORD $PG_PASSWORD
ENV PG_DB_NAME $PG_DB_NAME

COPY package*.json ./

RUN npm install

COPY . .

CMD [ "npm", "run", "dev" ]
